<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado pressionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- Cor do fundo do botão quando pressionado -->
            <solid android:color="@color/blueSecondary" />
            <!-- Cor e espessura da borda quando pressionado -->
            <stroke
                android:width="2dp"
                android:color="@color/white" />
            <!-- Borda arredondada -->
            <corners android:radius="13dp" />
        </shape>
    </item>

    <!-- Estado focado -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <!-- Cor do fundo do botão quando focado -->
            <solid android:color="@color/gray_transparent" />
            <!-- Cor e espessura da borda quando focado -->
            <stroke
                android:width="3dp"
                android:color="@color/yellow" />
            <!-- Borda arredondada -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Estado padrão (não pressionado ou focado) -->
    <item>
        <shape android:shape="rectangle">
            <!-- Cor do fundo do botão padrão -->
            <solid android:color="@color/blue" />
            <!-- Cor e espessura da borda padrão -->
            <stroke
                android:width="1dp"
                android:color="@color/white" />
            <!-- Borda arredondada -->
            <corners android:radius="13dp" />
        </shape>
    </item>
</selector>
