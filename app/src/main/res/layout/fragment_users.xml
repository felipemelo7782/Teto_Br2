<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".fragments.UsersFragment">
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/background_gradient"
            >
            <LinearLayout
                android:id="@+id/topbar"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="60dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/transparent_background"
                    android:src="@drawable/baseline_back_24"
                    android:padding="8dp"
                    android:layout_marginStart="8dp"
                    app:tint="@color/white"
                    android:contentDescription="@string/txt_configuraces" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="start|center_vertical"
                    android:paddingHorizontal="8dp"
                    android:layout_weight="1">

                    <TextView
                        android:alpha="0.5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginVertical="8dp"
                        android:text="UID:"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:textAllCaps="true"
                        android:textStyle="bold" />
                    <TextView
                        android:alpha="0.5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginVertical="8dp"
                        android:text="13455cs54d54a46das4"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:textAllCaps="true"
                        android:textStyle="bold" />
                    <ImageButton
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/transparent_background"
                        android:src="@drawable/baseline_settings_24"
                        android:padding="8dp"
                        app:tint="@color/white"
                        android:contentDescription="@string/txt_configuraces" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:elevation="5dp"
                android:background="@drawable/bg_rounded2"
                android:layout_marginTop="50dp"
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:paddingStart="20dp"
                android:gravity="start|center_vertical"
                tools:ignore="RtlSymmetry">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:padding="6dp"
                    android:src="@drawable/banner_teto"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/blue"
                    app:civ_border_overlay="true"
                     />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="4dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_marginHorizontal="22dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="2000"
                                android:textColor="@color/blueSecondary"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="seguidores"
                                android:textColor="@color/blueSecondary"
                                android:textSize="14sp"
                                android:textStyle="normal" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="2000"
                                android:textColor="@color/blueSecondary"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="seguindo"
                                android:textColor="@color/blueSecondary"
                                android:textSize="14sp"
                                android:textStyle="normal" />
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_marginStart="22dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:text="Felipe JosÃ© de Melo"
                        android:textColor="@color/blueSecondary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_seguir"
                        android:scaleX="0.7"
                        android:scaleY="0.7"
                        android:layout_gravity="end"
                        android:theme="@style/Theme.TetoBr"
                        style="@style/ButtonRounded2"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:drawableEnd="@drawable/baseline_person_add_24"
                        android:drawablePadding="8dp"
                        android:drawableTint="@color/blue"
                        android:padding="8dp"
                        android:text="SEGUIR"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:layout_weight="1"
            android:layout_height="0dp">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="8dp"
                android:id="@+id/rv_eventos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/background_gradient_reverse"
            />
    </LinearLayout>
</layout>